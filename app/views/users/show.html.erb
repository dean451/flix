<article id="user">
  <header>
    <%= profile_image_for(@user) %>
    <h1><%= @user.name %></h1>
    <h2><%= link_to @user.email %></h2>
  </header>

  <footer>
    <nav>
      <% if current_user?(@user) %>
      <%= link_to "Edit Account", edit_user_path(@user), class: 'button' %>
      <%= link_to 'Delete Account', @user,
                   method: :delete,
                   data: { confirm: 'Are you sure?' },
                   class: 'button' %>
      <% end %>
    </nav>
    <h3>Username</h3>
    <p>
      <%= @user.username %>
    </p>
    <h3>Member Since</h3>
    <p>
      <%= @user.created_at.strftime("%B %Y") %>
    </p>
  </footer>

</article>
